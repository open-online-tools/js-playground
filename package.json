{
  "name": "js-playground",
  "version": "0.5.0",
  "description": "Interactive JavaScript playground with live code execution and console output",
  "type": "module",
  "private": true,
  "scripts": {
    "test": "node --test tests/",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "check:duplication": "jscpd .",
    "check": "npm run lint && npm run format:check && npm run check:duplication",
    "prepare": "husky || true",
    "changeset": "changeset",
    "changeset:version": "node scripts/changeset-version.mjs",
    "changeset:publish": "changeset publish",
    "changeset:status": "changeset status --since=origin/main",
    "app:install": "cd app && npm install",
    "app:dev": "cd app && npm run dev",
    "app:build": "cd app && npm run build"
  },
  "keywords": [
    "playground",
    "javascript",
    "repl",
    "interactive",
    "code-editor"
  ],
  "author": "",
  "license": "Unlicense",
  "repository": {
    "type": "git",
    "url": "https://github.com/open-online-tools/js-playground"
  },
  "homepage": "https://open-online-tools.github.io/js-playground/",
  "engines": {
    "node": ">=20.0.0"
  },
  "devDependencies": {
    "@changesets/cli": "^2.29.7",
    "eslint": "^9.38.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "husky": "^9.1.7",
    "jscpd": "^4.0.5",
    "lint-staged": "^16.2.6",
    "prettier": "^3.6.2",
    "test-anywhere": "^0.8.48"
  },
  "lint-staged": {
    "*.{js,mjs,cjs}": [
      "eslint --fix --max-warnings 0 --no-warn-ignored",
      "prettier --write --ignore-unknown",
      "prettier --check --ignore-unknown"
    ],
    "*.md": [
      "prettier --write --ignore-unknown",
      "prettier --check --ignore-unknown"
    ]
  }
}
